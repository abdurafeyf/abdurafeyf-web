---
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<!--
  Lean academic header for Astro.
  - Minimal, semantic, accessible
  - Left: title + description
  - Right: compact profile + nav links (desktop)
  - Mobile: hamburger -> slide-down menu
  - No heavy JS, only a tiny toggle for mobile
  - Replace /public/profile.jpg and links with your own
-->
<header class="site-header" role="banner">
  <div class="container">
    <div class="brand">
      <a class="site-title" href="/">{SITE_TITLE}</a>
      <p class="site-desc">{SITE_DESCRIPTION}</p>
    </div>

    <button
      id="mobile-toggle"
      class="mobile-toggle"
      aria-expanded="false"
      aria-controls="primary-nav"
    >
      <span class="sr-only">Toggle navigation</span>
      <svg width="24" height="24" viewBox="0 0 24 24" aria-hidden="true"
        ><path
          d="M3 6h18M3 12h18M3 18h18"
          stroke="currentColor"
          stroke-width="1.6"
          stroke-linecap="round"></path></svg
      >
    </button>

    <nav
      id="primary-nav"
      class="primary-nav"
      role="navigation"
      aria-label="Primary"
    >
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/research">Research</a></li>
        <li><a href="/publications">Publications</a></li>
        <li><a href="/teaching">Teaching</a></li>
        <li><a href="/cv.pdf" target="_blank" rel="noopener">CV</a></li>
      </ul>
    </nav>

    <div class="profile">
      <img
        class="profile-img"
        src="/public/profile.jpg"
        alt="Profile photo"
        width="56"
        height="56"
        loading="lazy"
      />
      <div class="meta">
        <div class="name">Rafey</div>
        <a class="contact-link" href="/contact">Contact</a>
      </div>
    </div>
  </div>
</header>

<style>
  :root {
    --container-max: 1100px;
    --accent: #0b5fff; /* subtle blue accent - change if you want */
    --muted: #6b7280;
    --bg: #ffffff;
    --text: #0f172a;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .site-header {
    background: var(--bg);
    border-bottom: 1px solid #e6e9ef;
    color: var(--text);
    font-family:
      Inter,
      system-ui,
      -apple-system,
      "Segoe UI",
      Roboto,
      "Helvetica Neue",
      Arial;
  }

  .container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 18px 24px;
    display: grid;
    grid-template-columns: 1fr auto auto;
    gap: 16px;
    align-items: center;
  }

  .brand {
    min-width: 0;
  }
  .site-title {
    display: block;
    font-weight: 700;
    font-size: 1.05rem;
    line-height: 1;
    color: var(--text);
    text-decoration: none;
  }
  .site-desc {
    margin: 6px 0 0 0;
    font-size: 0.875rem;
    color: var(--muted);
  }

  /* primary nav (desktop) */
  .primary-nav ul {
    display: flex;
    gap: 14px;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .primary-nav a {
    text-decoration: none;
    color: var(--muted);
    font-size: 0.95rem;
    padding: 6px 8px;
    border-radius: 6px;
  }
  .primary-nav a:focus,
  .primary-nav a:hover {
    color: var(--text);
    background: rgba(11, 95, 255, 0.06);
    outline: 2px solid transparent;
  }

  .profile {
    display: flex;
    gap: 10px;
    align-items: center;
  }
  .profile-img {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    object-fit: cover;
    border: 1px solid #e6e9ef;
  }
  .meta {
    display: flex;
    flex-direction: column;
    font-size: 0.85rem;
  }
  .name {
    font-weight: 600;
  }
  .contact-link {
    color: var(--accent);
    text-decoration: none;
    font-size: 0.85rem;
  }
  .contact-link:hover {
    text-decoration: underline;
  }

  /* mobile toggle - hidden on desktop */
  .mobile-toggle {
    display: none;
    background: transparent;
    border: 0;
    padding: 6px;
    border-radius: 6px;
    cursor: pointer;
  }
  .mobile-toggle svg {
    color: var(--muted);
  }

  /* Responsive: collapse nav into a dropdown under header on small screens */
  @media (max-width: 820px) {
    .container {
      grid-template-columns: 1fr auto;
      align-items: center;
    }
    .primary-nav {
      position: absolute;
      left: 0;
      right: 0;
      top: 100%;
      background: var(--bg);
      border-bottom: 1px solid #e6e9ef;
      padding: 12px 24px;
      display: none;
    }
    .primary-nav.open {
      display: block;
    }
    .primary-nav ul {
      flex-direction: column;
      gap: 8px;
    }
    .profile {
      display: none;
    } /* hide profile on small screens to keep header tidy */
    .mobile-toggle {
      display: inline-flex;
    }
  }

  /* Reduce visual noise for print and prefers-reduced-motion */
  @media (prefers-reduced-motion: reduce) {
    * {
      transition: none !important;
    }
  }
</style>

<script>
  // Tiny, dependency-free mobile toggle
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("mobile-toggle");
    const nav = document.getElementById("primary-nav");
    btn?.addEventListener("click", () => {
      if (nav) {
        const open = nav.classList.toggle("open");
        btn.setAttribute("aria-expanded", String(open));
      }
    });
  });
</script>
