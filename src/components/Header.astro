---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<header>
  <div class="header-section">
    <div class="header-frame">
      <h1>{SITE_TITLE}</h1>
      <h2>{SITE_DESCRIPTION}</h2>
    </div>
    <div class="header-frame">
      <div class="profile-container">
        <div class="zoomed-circle"></div>
        <!-- Clickable Spotify Badge -->
        <button
          class="spotify-badge top-right"
          id="spotify-toggle"
          title="Play Music"
        >
          <svg class="spotify-icon" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.84-.179-.959-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.361 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"
            ></path>
          </svg>
          <span class="spotify-text">Play</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Spotify Player Overlay -->
  <div id="spotify-player" class="spotify-player hidden">
    <div class="player-container">
      <div class="player-header">
        <div class="song-info">
          <svg class="spotify-logo" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.84-.179-.959-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.361 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"
            ></path>
          </svg>
          <span class="now-playing">Now Playing</span>
        </div>
        <button class="close-btn" id="close-player">Ã—</button>
      </div>
      <iframe
        src="https://open.spotify.com/embed/track/6EOKwO6WaLal58MSsi6U4W?utm_source=generator&theme=0"
        width="100%"
        height="352"
        frameborder="0"
        allowfullscreen=""
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy"
        class="spotify-iframe"
      >
      </iframe>
    </div>
  </div>
</header>
<nav>
  <HeaderLink href="/">home</HeaderLink>
  <HeaderLink href="/posts">posts</HeaderLink>
</nav>

<style>
  h2 {
    margin: 0.5em 0;
  }

  .profile-container {
    position: relative;
    display: inline-block;
  }

  .zoomed-circle {
    width: 250px;
    height: 250px;
    border-radius: 50%;
    background-image: url("/public/standing-profile.jpg");
    background-size: 150%;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
  }

  .spotify-badge {
    position: absolute;
    background: linear-gradient(135deg, #1db954 0%, #1ed760 100%);
    color: white;
    padding: 8px 12px;
    border-radius: 20px;
    display: flex;
    align-items: center;
    gap: 6px;
    box-shadow: 0 4px 12px rgba(29, 185, 84, 0.4);
    animation: pulse 2s infinite;
    border: 2px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    font-size: 0.8rem;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .spotify-badge:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 25px rgba(29, 185, 84, 0.8);
    animation-duration: 1s;
  }

  .spotify-badge:active {
    transform: scale(0.98);
  }

  .spotify-icon {
    width: 16px;
    height: 16px;
    color: white;
  }

  .spotify-text {
    white-space: nowrap;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .spotify-badge.top-right {
    top: 15px;
    right: 15px;
  }

  /* Spotify Player Overlay */
  .spotify-player {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: linear-gradient(135deg, #191414 0%, #1db954 100%);
    z-index: 1000;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .spotify-player.hidden {
    transform: translateY(-100%);
    opacity: 0;
  }

  .spotify-player.visible {
    transform: translateY(0);
    opacity: 1;
  }

  .player-container {
    max-width: 500px;
    margin: 0 auto;
    padding: 20px;
  }

  .player-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    color: white;
  }

  .song-info {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .spotify-logo {
    width: 24px;
    height: 24px;
    color: #1db954;
  }

  .now-playing {
    font-size: 1.1rem;
    font-weight: 600;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .close-btn {
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: white;
    font-size: 24px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .close-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.1);
  }

  .spotify-iframe {
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  @keyframes pulse {
    0%,
    100% {
      box-shadow: 0 4px 12px rgba(29, 185, 84, 0.4);
    }
    50% {
      box-shadow: 0 4px 20px rgba(29, 185, 84, 0.8);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .zoomed-circle {
      width: 200px;
      height: 200px;
    }

    .spotify-badge {
      top: 10px;
      right: 10px;
      padding: 6px 10px;
      font-size: 0.7rem;
    }

    .spotify-icon {
      width: 14px;
      height: 14px;
    }

    .player-container {
      padding: 15px;
    }

    .now-playing {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .zoomed-circle {
      width: 150px;
      height: 150px;
    }

    .spotify-badge {
      top: 8px;
      right: 8px;
      padding: 4px 8px;
      font-size: 0.6rem;
    }

    .spotify-icon {
      width: 12px;
      height: 12px;
    }

    .player-container {
      padding: 10px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const spotifyToggle = document.getElementById("spotify-toggle");
    const spotifyPlayer = document.getElementById("spotify-player");
    const closePlayer = document.getElementById("close-player");

    spotifyToggle.addEventListener("click", function () {
      spotifyPlayer.classList.remove("hidden");
      spotifyPlayer.classList.add("visible");

      // Add smooth animation from the badge position
      spotifyToggle.style.transform = "scale(1.2)";
      setTimeout(() => {
        spotifyToggle.style.transform = "scale(1)";
      }, 200);
    });

    closePlayer.addEventListener("click", function () {
      spotifyPlayer.classList.remove("visible");
      spotifyPlayer.classList.add("hidden");
    });

    // Close player when clicking outside
    spotifyPlayer.addEventListener("click", function (e) {
      if (e.target === spotifyPlayer) {
        spotifyPlayer.classList.remove("visible");
        spotifyPlayer.classList.add("hidden");
      }
    });

    // Close with Escape key
    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape" && spotifyPlayer.classList.contains("visible")) {
        spotifyPlayer.classList.remove("visible");
        spotifyPlayer.classList.add("hidden");
      }
    });
  });
</script>
