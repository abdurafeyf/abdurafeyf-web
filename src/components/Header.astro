---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<header>
  <div class="header-section">
    <div class="header-frame">
      <h1>{SITE_TITLE}</h1>
      <h2>{SITE_DESCRIPTION}</h2>
    </div>
    <div class="header-frame">
      <div class="profile-container">
        <div class="zoomed-circle"></div>
        <!-- Clickable Spotify Badge positioned at top-right -->
        <a
          href="https://open.spotify.com/track/6EOKwO6WaLal58MSsi6U4W?si=6754a40723a64527"
          target="_blank"
          rel="noopener noreferrer"
          class="spotify-badge top-right"
          title="Play on Spotify"
        >
          <svg class="spotify-icon" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.84-.179-.959-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.361 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"
            ></path>
          </svg>
          <span class="spotify-text">Play</span>
        </a>
      </div>
    </div>
  </div>
</header>
<nav>
  <HeaderLink href="/">home</HeaderLink>
  <HeaderLink href="/posts">posts</HeaderLink>
</nav>

<style>
  h2 {
    margin: 0.5em 0;
  }

  .profile-container {
    position: relative;
    display: inline-block;
  }

  .zoomed-circle {
    width: 250px;
    height: 250px;
    border-radius: 50%;
    background-image: url("/public/standing-profile.jpg");
    background-size: 150%; /* Zoom */
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
  }

  .spotify-badge {
    position: absolute;
    background: linear-gradient(135deg, #1db954 0%, #1ed760 100%);
    color: white;
    padding: 8px 12px;
    border-radius: 20px;
    display: flex;
    align-items: center;
    gap: 6px;
    box-shadow: 0 4px 12px rgba(29, 185, 84, 0.4);
    animation: pulse 2s infinite;
    border: 2px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    font-size: 0.8rem;
    font-weight: 600;
    transition: all 0.3s ease;
    text-decoration: none;
    cursor: pointer;
  }

  .spotify-badge:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 25px rgba(29, 185, 84, 0.8);
    animation-duration: 1s;
  }

  .spotify-badge:active {
    transform: scale(0.98);
  }

  .spotify-icon {
    width: 16px;
    height: 16px;
    color: white;
  }

  .spotify-text {
    white-space: nowrap;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  /* Top-right positioning */
  .spotify-badge.top-right {
    top: 15px;
    right: 15px;
  }

  @keyframes pulse {
    0%,
    100% {
      box-shadow: 0 4px 12px rgba(29, 185, 84, 0.4);
    }
    50% {
      box-shadow: 0 4px 20px rgba(29, 185, 84, 0.8);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .zoomed-circle {
      width: 200px;
      height: 200px;
    }

    .spotify-badge {
      top: 10px;
      right: 10px;
      padding: 6px 10px;
      font-size: 0.7rem;
    }

    .spotify-icon {
      width: 14px;
      height: 14px;
    }
  }

  @media (max-width: 480px) {
    .zoomed-circle {
      width: 150px;
      height: 150px;
    }

    .spotify-badge {
      top: 8px;
      right: 8px;
      padding: 4px 8px;
      font-size: 0.6rem;
    }

    .spotify-icon {
      width: 12px;
      height: 12px;
    }
  }
</style>
