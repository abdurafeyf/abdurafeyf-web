---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<header>
  <div class="header-section">
    <div class="header-frame">
      <h1>{SITE_TITLE}</h1>
      <h2>{SITE_DESCRIPTION}</h2>
    </div>
    <div class="header-frame">
      <div class="profile-container">
        <div class="zoomed-circle"></div>
        <!-- Small Spotify Badge -->
        <button
          class="spotify-badge top-right"
          id="spotify-toggle"
          title="Play Music"
        >
          <svg class="spotify-icon" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.84-.179-.959-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.361 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"
            ></path>
          </svg>
          <span class="spotify-text">♪</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Compact Mini Player -->
  <div id="mini-player" class="mini-player hidden">
    <div class="mini-content">
      <div class="track-info">
        <svg class="mini-spotify-icon" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.84-.179-.959-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.361 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"
          ></path>
        </svg>
        <div class="song-text">
          <span class="song-name">Your Song Title</span>
          <span class="artist">Your Artist Name</span>
        </div>
        <div class="pulse-indicator"></div>
      </div>

      <div class="mini-player-embed">
        <iframe
          src="https://open.spotify.com/embed/track/6EOKwO6WaLal58MSsi6U4W?utm_source=generator&theme=0"
          width="250"
          height="80"
          frameborder="0"
          allowfullscreen=""
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy"
          class="mini-iframe"
        >
        </iframe>
      </div>

      <button class="mini-close" id="close-mini">×</button>
    </div>
  </div>
</header>
<nav>
  <HeaderLink href="/">home</HeaderLink>
  <HeaderLink href="/posts">posts</HeaderLink>
</nav>

<style>
  h2 {
    margin: 0.5em 0;
  }

  .profile-container {
    position: relative;
    display: inline-block;
  }

  .zoomed-circle {
    width: 250px;
    height: 250px;
    border-radius: 50%;
    background-image: url("/public/standing-profile.jpg");
    background-size: 150%;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
  }

  .spotify-badge {
    position: absolute;
    background: linear-gradient(135deg, #1db954 0%, #1ed760 100%);
    color: white;
    padding: 6px 10px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    gap: 4px;
    box-shadow: 0 3px 10px rgba(29, 185, 84, 0.4);
    animation: pulse 2s infinite;
    border: 1.5px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    font-size: 0.7rem;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .spotify-badge:hover {
    transform: scale(1.05);
    box-shadow: 0 5px 15px rgba(29, 185, 84, 0.6);
  }

  .spotify-badge.top-right {
    top: 15px;
    right: 15px;
  }

  .spotify-icon {
    width: 14px;
    height: 14px;
    color: white;
  }

  .spotify-text {
    font-size: 14px;
    color: white;
  }

  /* Mini Player */
  .mini-player {
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%) translateY(-100%);
    background: linear-gradient(135deg, #1db954 0%, #191414 100%);
    border-radius: 0 0 20px 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(15px);
    z-index: 1000;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(29, 185, 84, 0.2);
  }

  .mini-player.visible {
    transform: translateX(-50%) translateY(0);
  }

  .mini-content {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    gap: 12px;
    max-width: 400px;
  }

  .track-info {
    display: flex;
    align-items: center;
    gap: 8px;
    min-width: 120px;
  }

  .mini-spotify-icon {
    width: 18px;
    height: 18px;
    color: #1db954;
    flex-shrink: 0;
  }

  .song-text {
    display: flex;
    flex-direction: column;
    gap: 1px;
    min-width: 0;
  }

  .song-name {
    color: white;
    font-size: 0.8rem;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .artist {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.7rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100px;
  }

  .pulse-indicator {
    width: 6px;
    height: 6px;
    background: #1db954;
    border-radius: 50%;
    animation: pulseIndicator 1.5s ease-in-out infinite;
    flex-shrink: 0;
  }

  .mini-player-embed {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .mini-iframe {
    border-radius: 8px;
    max-width: 250px;
  }

  .mini-close {
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: white;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    flex-shrink: 0;
  }

  .mini-close:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.1);
  }

  @keyframes pulse {
    0%,
    100% {
      box-shadow: 0 3px 10px rgba(29, 185, 84, 0.4);
    }
    50% {
      box-shadow: 0 3px 15px rgba(29, 185, 84, 0.7);
    }
  }

  @keyframes pulseIndicator {
    0%,
    100% {
      opacity: 0.7;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.3);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .mini-content {
      padding: 10px 12px;
      gap: 8px;
    }

    .mini-iframe {
      width: 200px;
      height: 80px;
    }

    .song-name {
      max-width: 80px;
    }

    .artist {
      max-width: 80px;
    }

    .zoomed-circle {
      width: 200px;
      height: 200px;
    }

    .spotify-badge {
      top: 10px;
      right: 10px;
      padding: 5px 8px;
      font-size: 0.6rem;
    }

    .spotify-icon {
      width: 12px;
      height: 12px;
    }
  }

  @media (max-width: 480px) {
    .mini-content {
      flex-direction: column;
      padding: 8px 10px;
      gap: 6px;
    }

    .track-info {
      justify-content: center;
    }

    .mini-iframe {
      width: 180px;
      height: 80px;
    }

    .zoomed-circle {
      width: 150px;
      height: 150px;
    }

    .spotify-badge {
      top: 8px;
      right: 8px;
      padding: 4px 6px;
      font-size: 0.6rem;
    }

    .spotify-icon {
      width: 10px;
      height: 10px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const spotifyToggle = document.getElementById("spotify-toggle");
    const miniPlayer = document.getElementById("mini-player");
    const closeMini = document.getElementById("close-mini");

    spotifyToggle.addEventListener("click", function () {
      miniPlayer.classList.remove("hidden");
      miniPlayer.classList.add("visible");

      // Small animation for the button
      spotifyToggle.style.transform = "scale(1.1)";
      setTimeout(() => {
        spotifyToggle.style.transform = "scale(1)";
      }, 150);
    });

    closeMini.addEventListener("click", function () {
      miniPlayer.classList.remove("visible");
      setTimeout(() => {
        miniPlayer.classList.add("hidden");
      }, 500);
    });

    // Close with Escape key
    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape" && miniPlayer.classList.contains("visible")) {
        closeMini.click();
      }
    });
  });
</script>
