---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<header>
  <div class="header-section">
    <div class="header-frame">
      <h1>{SITE_TITLE}</h1>
      <h2>{SITE_DESCRIPTION}</h2>
    </div>
    <div class="header-frame">
      <div class="profile-container">
        <div class="zoomed-circle"></div>
        <!-- Clickable Spotify Badge -->
        <button
          class="spotify-badge top-right"
          id="spotify-toggle"
          title="Play Music"
        >
          <svg class="spotify-icon" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.84-.179-.959-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.361 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"
            ></path>
          </svg>
          <span class="spotify-text">Play</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Music Player that morphs from button -->
  <div id="music-player" class="music-player hidden">
    <div class="player-content">
      <div class="song-details">
        <div class="album-art">
          <svg
            class="spotify-logo-large"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.84-.179-.959-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.361 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"
            ></path>
          </svg>
        </div>
        <div class="track-info">
          <div class="track-name">Your Song Title</div>
          <div class="artist-name">Your Artist Name</div>
          <div class="now-playing-indicator">
            <span class="pulse-dot"></span>
            Now Playing
          </div>
        </div>
      </div>

      <div class="player-embed">
        <iframe
          src="https://open.spotify.com/embed/track/6EOKwO6WaLal58MSsi6U4W?utm_source=generator&theme=0"
          width="100%"
          height="80"
          frameborder="0"
          allowfullscreen=""
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy"
          class="spotify-iframe"
        >
        </iframe>
      </div>

      <button class="minimize-btn" id="close-player">
        <svg viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
          ></path>
        </svg>
      </button>
    </div>
  </div>
</header>
<nav>
  <HeaderLink href="/">home</HeaderLink>
  <HeaderLink href="/posts">posts</HeaderLink>
</nav>

<style>
  h2 {
    margin: 0.5em 0;
  }

  .profile-container {
    position: relative;
    display: inline-block;
  }

  .zoomed-circle {
    width: 250px;
    height: 250px;
    border-radius: 50%;
    background-image: url("/public/standing-profile.jpg");
    background-size: 150%;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
  }

  .spotify-badge {
    position: absolute;
    background: linear-gradient(135deg, #1db954 0%, #1ed760 100%);
    color: white;
    padding: 8px 12px;
    border-radius: 20px;
    display: flex;
    align-items: center;
    gap: 6px;
    box-shadow: 0 4px 12px rgba(29, 185, 84, 0.4);
    animation: pulse 2s infinite;
    border: 2px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    font-size: 0.8rem;
    font-weight: 600;
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    z-index: 1001;
    transform-origin: center;
  }

  .spotify-badge:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 25px rgba(29, 185, 84, 0.8);
    animation-duration: 1s;
  }

  .spotify-badge.top-right {
    top: 15px;
    right: 15px;
  }

  /* Animation states for the button */
  .spotify-badge.animating {
    position: fixed !important;
    z-index: 1002;
    transition: all 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .spotify-badge.morphed {
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    width: 100% !important;
    height: 100px !important;
    border-radius: 0 !important;
    padding: 15px 30px !important;
    background: linear-gradient(
      90deg,
      #191414 0%,
      #1db954 50%,
      #191414 100%
    ) !important;
    font-size: 0 !important;
    justify-content: flex-start !important;
    opacity: 0;
  }

  .spotify-icon {
    width: 16px;
    height: 16px;
    color: white;
    transition: all 0.5s ease;
  }

  .spotify-text {
    white-space: nowrap;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    transition: all 0.5s ease;
  }

  /* Music Player */
  .music-player {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: linear-gradient(90deg, #191414 0%, #1db954 50%, #191414 100%);
    z-index: 1000;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(29, 185, 84, 0.3);
    transform: translateY(-100%);
    opacity: 0;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .music-player.visible {
    transform: translateY(0);
    opacity: 1;
  }

  .player-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px 30px;
    max-width: 1200px;
    margin: 0 auto;
    gap: 20px;
    opacity: 0;
    transform: translateY(-20px);
    transition: all 0.8s ease 0.3s;
  }

  .music-player.visible .player-content {
    opacity: 1;
    transform: translateY(0);
  }

  .song-details {
    display: flex;
    align-items: center;
    gap: 15px;
    min-width: 0;
    flex: 1;
  }

  .album-art {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #1db954, #1ed760);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(29, 185, 84, 0.4);
    transform: scale(0);
    animation: scaleIn 0.5s ease 0.8s forwards;
  }

  .spotify-logo-large {
    width: 30px;
    height: 30px;
    color: white;
  }

  .track-info {
    color: white;
    min-width: 0;
    transform: translateX(-20px);
    opacity: 0;
    animation: slideInLeft 0.6s ease 0.6s forwards;
  }

  .track-name {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 2px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .artist-name {
    font-size: 0.9rem;
    opacity: 0.8;
    margin-bottom: 4px;
  }

  .now-playing-indicator {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.8rem;
    opacity: 0.7;
  }

  .pulse-dot {
    width: 8px;
    height: 8px;
    background: #1db954;
    border-radius: 50%;
    animation: pulseIndicator 1.5s ease-in-out infinite;
  }

  .player-embed {
    flex: 2;
    max-width: 400px;
    border-radius: 12px;
    overflow: hidden;
    transform: scale(0.8);
    opacity: 0;
    animation: fadeInScale 0.6s ease 0.7s forwards;
  }

  .spotify-iframe {
    border-radius: 12px;
  }

  .minimize-btn {
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: white;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transform: rotate(180deg) scale(0);
    animation: rotateIn 0.5s ease 0.9s forwards;
  }

  .minimize-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.1) rotate(0deg);
  }

  .minimize-btn svg {
    width: 18px;
    height: 18px;
  }

  /* Keyframe Animations */
  @keyframes pulse {
    0%,
    100% {
      box-shadow: 0 4px 12px rgba(29, 185, 84, 0.4);
    }
    50% {
      box-shadow: 0 4px 20px rgba(29, 185, 84, 0.8);
    }
  }

  @keyframes pulseIndicator {
    0%,
    100% {
      opacity: 0.7;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.2);
    }
  }

  @keyframes scaleIn {
    to {
      transform: scale(1);
    }
  }

  @keyframes slideInLeft {
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes fadeInScale {
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  @keyframes rotateIn {
    to {
      transform: rotate(0deg) scale(1);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .player-content {
      padding: 12px 20px;
      gap: 15px;
    }

    .album-art {
      width: 50px;
      height: 50px;
    }

    .spotify-logo-large {
      width: 25px;
      height: 25px;
    }

    .track-name {
      font-size: 1rem;
    }

    .artist-name {
      font-size: 0.8rem;
    }

    .zoomed-circle {
      width: 200px;
      height: 200px;
    }

    .spotify-badge {
      top: 10px;
      right: 10px;
      padding: 6px 10px;
      font-size: 0.7rem;
    }

    .spotify-icon {
      width: 14px;
      height: 14px;
    }
  }

  @media (max-width: 480px) {
    .player-content {
      flex-direction: column;
      gap: 10px;
      padding: 10px 15px;
    }

    .song-details {
      justify-content: center;
      text-align: center;
    }

    .player-embed {
      max-width: 100%;
    }

    .zoomed-circle {
      width: 150px;
      height: 150px;
    }

    .spotify-badge {
      top: 8px;
      right: 8px;
      padding: 4px 8px;
      font-size: 0.6rem;
    }

    .spotify-icon {
      width: 12px;
      height: 12px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const spotifyToggle = document.getElementById("spotify-toggle");
    const musicPlayer = document.getElementById("music-player");
    const closePlayer = document.getElementById("close-player");

    spotifyToggle.addEventListener("click", function () {
      // Get button position
      const buttonRect = spotifyToggle.getBoundingClientRect();

      // Add animating class and set initial position
      spotifyToggle.classList.add("animating");
      spotifyToggle.style.position = "fixed";
      spotifyToggle.style.top = buttonRect.top + "px";
      spotifyToggle.style.left = buttonRect.left + "px";
      spotifyToggle.style.width = buttonRect.width + "px";
      spotifyToggle.style.height = buttonRect.height + "px";

      // Start the morphing animation
      setTimeout(() => {
        spotifyToggle.classList.add("morphed");
      }, 50);

      // Show the music player after button morphs
      setTimeout(() => {
        musicPlayer.classList.add("visible");
      }, 600);

      // Hide the morphed button after player is visible
      setTimeout(() => {
        spotifyToggle.style.display = "none";
      }, 1200);
    });

    closePlayer.addEventListener("click", function () {
      // Hide music player
      musicPlayer.classList.remove("visible");

      // Reset and show button
      setTimeout(() => {
        spotifyToggle.style.display = "flex";
        spotifyToggle.classList.remove("morphed", "animating");
        spotifyToggle.style.position = "absolute";
        spotifyToggle.style.top = "15px";
        spotifyToggle.style.right = "15px";
        spotifyToggle.style.left = "auto";
        spotifyToggle.style.width = "auto";
        spotifyToggle.style.height = "auto";
      }, 300);
    });

    // Close with Escape key
    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape" && musicPlayer.classList.contains("visible")) {
        closePlayer.click();
      }
    });
  });
</script>
