---
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Publication from "../components/Publication.astro";
import ColorScript from "../components/ColorScript.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

let publications = await getCollection("publications");

publications = publications.sort(
  (a, b) =>
    new Date(b.data.updated || b.data.added).valueOf() -
    new Date(a.data.updated || a.data.added).valueOf()
);
---

<!doctype html>
<html lang="en-us">
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  <body>
    <Header />
    <main>
      <content>
        <ul class="publications-list">
          {
            publications.map(
              ({
                url,
                data: { description, slug, title, tags, added: date },
              }) => <Publication {description} {date} {slug} {title} {tags} />
            )
          }
        </ul>
      </content>
    </main>
    <Footer />
    <ColorScript />
  </body>
</html>
