---
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HomePosts from "../components/HomePosts.astro";
import ColorScript from "../components/ColorScript.astro";
import Tags from "../components/Tags.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import { Content as About } from "./about.md";
import getTags from "../scripts/getTags";

const posts = await getCollection("posts");
const tags = getTags(posts);
---

<!doctype html>
<html lang="en-us">
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <About />

      <br />

      <h3>Here's my most recent posts</h3>

      <HomePosts allPosts={posts} />

      <!-- Spotify Section with improved styling -->
      <section class="spotify-section">
        <h2 class="spotify-title">ðŸŽµ Listen on Spotify</h2>
        <div class="spotify-container">
          <iframe
            src="https://open.spotify.com/embed/track/6EOKwO6WaLal58MSsi6U4W?utm_source=generator&theme=0"
            width="100%"
            height="152"
            frameborder="0"
            allowfullscreen=""
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
            loading="lazy"
            class="spotify-iframe"
          >
          </iframe>
        </div>
      </section>

      <br />

      <Tags tags={tags} all />
    </main>
    <Footer />
    <ColorScript />
  </body>
</html>

<style>
  .spotify-section {
    margin: 3rem 0;
    padding: 2rem;
    background: linear-gradient(135deg, #1db954 0%, #191414 100%);
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(29, 185, 84, 0.2);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .spotify-section:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 40px rgba(29, 185, 84, 0.3);
  }

  .spotify-title {
    color: #ffffff;
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
    font-weight: 600;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .spotify-container {
    max-width: 500px;
    margin: 0 auto;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }

  .spotify-iframe {
    border-radius: 12px;
    min-height: 152px;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .spotify-section {
      margin: 2rem 0;
      padding: 1.5rem;
    }

    .spotify-title {
      font-size: 1.3rem;
    }

    .spotify-container {
      max-width: 100%;
    }
  }

  @media (max-width: 480px) {
    .spotify-section {
      padding: 1rem;
    }

    .spotify-iframe {
      height: 152px;
    }
  }
</style>
